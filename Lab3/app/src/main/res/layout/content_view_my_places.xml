<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context=".ViewMyPlacesActivity"
    tools:showIn="@layout/activity_view_my_places">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewmyplace_name_label" />

    <TextView
        android:id="@+id/viewmyplace_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewmyplace_desc_label" />

    <TextView
        android:id="@+id/viewmyplace_desc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/viewmyplace_finished_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewmyplace_finished_button"/>

</LinearLayout>